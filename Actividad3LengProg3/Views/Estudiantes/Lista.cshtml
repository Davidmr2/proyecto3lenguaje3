@{
}
@model List<Actividad3LengProg3.Models.EstudianteViewModel>

<h2>Lista de Estudiantes</h2>

<table border="1">
    <tr>
        <th>Matrícula</th>
        <th>Nombre</th>
        <th>Edad</th>
        <th>Correo</th>
        <th>Carrera</th>
        <th>Acciones</th>
    </tr>
    @foreach (var estudiante in Model)
    {
        <tr>
            <td>@estudiante.Matricula</td>
            <td>@estudiante.Nombre</td>
            <td>@estudiante.Edad</td>
            <td>@estudiante.Correo</td>
            <td>@estudiante.Carrera</td>
            <td>
                @Html.ActionLink("Editar", "Editar", new { matricula = estudiante.Matricula }) |
                @Html.ActionLink("Eliminar", "Eliminar", new { matricula = estudiante.Matricula })
            </td>
        </tr>
    }
</table>
