@{
}
@model Actividad3LengProg3.Models.EstudianteViewModel

<h2>Editar Estudiante</h2>

@using (Html.BeginForm("Editar", "Estudiantes", FormMethod.Post))
{
    @Html.HiddenFor(m => m.Matricula)

    <div>
        @Html.LabelFor(m => m.Nombre)
        @Html.TextBoxFor(m => m.Nombre)
        @Html.ValidationMessageFor(m => m.Nombre)
    </div>
    <div>
        @Html.LabelFor(m => m.Edad)
        @Html.TextBoxFor(m => m.Edad)
        @Html.ValidationMessageFor(m => m.Edad)
    </div>
    <div>
        @Html.LabelFor(m => m.Correo)
        @Html.TextBoxFor(m => m.Correo)
        @Html.ValidationMessageFor(m => m.Correo)
    </div>
    <div>
        @Html.LabelFor(m => m.Carrera)
        @Html.TextBoxFor(m => m.Carrera)
        @Html.ValidationMessageFor(m => m.Carrera)
    </div>
    <button type="submit">Guardar</button>
}
